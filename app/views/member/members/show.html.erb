<div "container">
    <div class='row'>
        <div class='col-8 offset-2'>
          <h4 class="pt-3">マイページ</h4>
          <div class='row'>
           <div class="col-6 col-sm-4 col-md-3 d-flex align-items-center">
            <h5>登録情報</h5>
           </div>
             <div class="col-6 col-sm-4 col-md-3">
              <%= link_to "編集する",edit_member_path,class:'btn btn-success'%>
             </div>
           </div>
           
           <table class="table table-bordered my-3">
             <tr>
              <th class="table-active col-3">氏名</th>
               <td><%= @member.last_name %><%= @member.first_name %></td>
             </tr>
             <tr>
              <th class="table-active">カナ</th>
               <td><%= @member.last_name_kana %><%= @member.first_name_kana %></td>
             </tr>
             <tr>
              <th class="table-active">郵便番号</th>
               <td><%= @member.post_code %></td>
             </tr>
             <tr>
              <th class="table-active">住所</th>
               <td><%= @member.address %></td>
             </tr>
             <tr>
              <th class="table-active">電話番号</th>
               <td><%= @member.phone_number %></td>
             </tr>
             <tr>
              <th class="table-active">メールアドレス</th>
               <td><%= @member.email %></td>
             </tr>
            </table>

            <div class="row mb-3">
             <div class="col-6 col-sm-4 col-md-3 d-flex align-items-center">
              <h5>配送先</h5>
             </div>
              <div class="col-6 col-sm-4 col-md-3">
              <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary btn-block" %>
              </div>
            </div>

            <div class="row">
             <div class="col-6 col-sm-4 col-md-3 d-flex align-items-center">
              <h5>注文履歴</h5>
             </div>
              <div class="col-6 col-sm-4 col-md-3">
               <%= link_to "一覧を見る", orders_path, class:"btn btn-primary btn-block" %>
              </div>
           </div>

  </div>
</div>