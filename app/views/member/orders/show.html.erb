<div "container">
    <div class='row'>
        <div class='col offset-1'>
            <h4>注文履歴詳細</h4>
        </div>
    </div>
    <div class='row'>
        <div class='col-6 offset-1'>
            <h5>注文情報</h5>
            <table class="table table-bordered border-dark">
                <tr><th class="table-secondary">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
                <tr><th class="table-secondary">配送先</th><td><%= @order.shipping_address %></td></tr>
                <tr><th class="table-secondary">支払方法</th><td><%= @order.payment_method %></td></tr>
                <tr><th class="table-secondary">ステータス</th><td><%= @order.status %></td></tr>
            </table>
        </div>
        <div class='col-3'>
            <h5>請求情報</h5>
            <table class="table table-bordered border-dark">
                <% item_total = @order.total_payment - @order.postage %>
                <tr><th class="table-secondary">商品合計</th><td><%= item_total %></td></tr>
                <tr><th class="table-secondary">配送料</th><td><%= @order.postage %></td></tr>
                <tr><th class="table-secondary font-weight-bold">ご請求額</th><td><%= @order.total_payment %></td></tr>
            </table>
        </div>
    </div>
    <div class='row'>
        <div class='col-6 offset-1'>
            <h5>注文内容</h5>
            <table class="table table-bordered border-dark">
                <tr class="table-secondary">
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
                <% total=0 %>
                <% @ordered_items.each do |ordered_item| %>
                    <tr>
                        <td><%= ordered_item.item.name %></td>
                        <td><%= ordered_item.tax_included_price %></td>
                        <td><%= ordered_item.quantity %></td>
                        <td><%= total += ordered_item.tax_included_price*ordered_item.quantity %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>