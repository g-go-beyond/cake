<h4>注文履歴詳細</h4>

 <table class="table">
<tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
<tr><th>配送先</th><td><%= @order.shipping_address %></td></tr>
<tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
<tr><th>ステータス</th><td><%= @order.status %></td></tr>
</table>

 <h5>注文内容</h5>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @ordered_items.each do |ordered_item| %>
            <tr>
              <td><%= ordered_item.item.name %></td>
              <td><%= ordered_item.tax_included_price.to_s(:delimited) %></td>
              <td><%= ordered_item.quantity.to_s(:delimited) %></td>
              <td><%= (ordered_item.tax_included_price * ordered_item.quantity).to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>