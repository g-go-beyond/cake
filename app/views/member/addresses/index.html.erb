<div "container">
    <div class='row'>
        <div class='col-8 offset-2'>
         <h4 class="pt-3">配送先登録/一覧</h4>
          <%= form_with model: @address, url:addresses_path, local:true do |f| %>
           <table class="table table-borderless mt-5">
            <tr><div class="field">
             <th><%= f.label :郵便番号（ハイフンなし） %></th>
             <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", :placeholder => "0000000" %></td>
            </div>
            </tr>
  
            <tr><div class="field"> 
             <th><%= f.label :住所 %></th>
             <td><%= f.text_field :address, autofocus: true, autocomplete: "address", :placeholder => "東京都渋谷区代々木神園町0-0", :size=>"60" %></td>
            </div>
            </tr>
  
            <tr><div class="field"> 
             <th><%= f.label :宛名 %></th>
             <td><%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "令和道子"%><td>
             <td><%= f.submit "新規登録",class:"btn btn-success" %></td>
            </div>
           </tr>
          <% end %>
         </table>
       </div>
   </div>
         
   <div class='row'>
      <div class='col-8 offset-2 mt-5'>
        <table class="table table-bordered">
         <thead>
          <tr>
           <th>郵便番号</th>
           <th>住所</th>
           <th>宛名</th>
           <th></th>
          </tr></thead>
        <tbody>
        <% @addresses.each do |address| %>
         <tr>
          <td><%= address.post_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td class="d-flex justify-content-around"><%= link_to "編集する", edit_address_path(address),class:"btn btn-success" %>
            <%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
       </tbody>
      </table>
     </div>
 </div>
</div>