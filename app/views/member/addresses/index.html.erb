<h1>配送先登録/一覧</h1>
 <%= form_with model: @address, url:addresses_path, local:true do |f| %>
  <div class="field">
   <%= f.label :郵便番号（ハイフンなし） %>
   <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", :placeholder => "0000000" %>
  </div>
  
  <div class="field"> 
   <%= f.label :住所 %>
   <%= f.text_field :address, autofocus: true, autocomplete: "address", :placeholder => "東京都渋谷区代々木神園町0-0" %>
  </div>
  
  <div class="field"> 
   <%= f.label :宛名 %>
   <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "令和道子"%>
  </div>
  
  <div class="field">
   <%= f.submit "新規登録" %>
  </div>
<% end %>

<h1>配送先登録/一覧</h1>
 <table class="table">
  <thead>
   <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
   </tr>
  <tbody>
   <% @addresses.each do |address| %>
   <tr>
    <td><%= address.post_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集", edit_address_path(address) %>
        <%= link_to "削除", address_path(address), method: :delete %></td>
   </tr>
  <% end %>
  </tbody>
 </table>