<h1>配送先編集</h1>
<%= form_with model: @address, url:address_path(@address), local:true do |f| %>
  <div class="field">
   <%= f.label :郵便番号（ハイフンなし） %>
   <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
  </div>
  
  <div class="field"> 
   <%= f.label :住所 %>
   <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field"> 
   <%= f.label :宛名 %>
   <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
   <%= f.submit "変更内容を保存" %>
  </div>
<% end %>