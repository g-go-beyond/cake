<h2>商品詳細</h2>
 <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg", size: "100x100") %>
<table>
    <tr><th>商品名</th><td><%= @item.name %></td></tr>
    <tr><th>商品説明</th><td><%= @item.description %></td></tr>
    <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
    <tr><th>税込価格(税抜価格)</th><td>
        <% tax_include = (1.1)*(@item.price) %>
        <%= tax_include %>(<%= @item.price %>)</td></tr>
    <tr><th>販売ステータス</th><td>
        <% if @item.is_active == TRUE %>
          <%= "販売中" %>
        <% else %>
          <%= "販売停止中" %>
        <% end %>
    </td></tr>
</table>
<button type="submit" class="btn btn-success">
    <%= link_to '編集する',edit_admin_item_path(@item) %>
</button>