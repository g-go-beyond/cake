<div class="container">
    <div class="row">
        <div class="<col></col>">
            <h4 class="px-5 py-2 mt-5 ml-5 bg-light text-dark">商品詳細</h4>
        </div>
    </div>  
    <div class="row mt-3">
        <div class="col-4">
            <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg", size: "300x300") %>
        </div>
        <div class="col-8">
            <table class='table table-borderless'>
                <tr><th>商品名</th><td><%= @item.name %></td></tr>
                <tr><th>商品説明</th><td><%= @item.description %></td></tr>
                <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
                <tr><th>税込価格(税抜価格)</th><td>
                    <% tax_include = (1.1)*(@item.price) %>
                    <%= tax_include.to_i %>(<%= @item.price %>)円</td></tr>
                <tr><th>販売ステータス</th><td>
                    <% if @item.is_active == TRUE %>
                      <%= "販売中" %>
                    <% else %>
                      <%= "販売停止中" %>
                    <% end %>
                </td></tr>
            </table>
            <div class="field d-grid gap-2 col-6 mx-auto">
                <%= link_to '編集する',edit_admin_item_path(@item), class: "btn btn-success btn-lg" %>
            </div>
        </div>
    </div>
</div>