<h2>商品編集</h2>

<%= form_with model: @item, url: edit_admin_item_path, local: true do |f| %>
  <% if @item.errors.any? %>
    <%= @item.errors.count %> errors prohibited this item from being saved:<br>
      <% @item.errors.full_messages.each do |message| %>
        ・<%= message %><br>
      <% end %>
  <% end %>
  <table>
    <tr><th>商品画像</th><td><%=f.attachment_field :image %></td></tr>
    <tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
    <tr><th>商品説明</th><td><%= f.text_area :description %></td></tr>
    <tr><th>ジャンル</th><td>
     <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </td></tr>
    <tr><th>税抜価格</th><td><%= f.text_field :price %></td></tr>
    <tr><th>販売ステータス</th><td>
          <%= f.radio_button :is_active, 1 %>
          <%= f.label :is_active, "販売中", value:1%>
          <%= f.radio_button :is_active, 2 %>
          <%= f.label :is_active, "販売停止中", value:2%>
        </td></tr>
    <tr><th></th><td>
      <button type="submit" class="btn btn-success">
            <% f.submit %>変更を保存
      </button>
    </td></tr>
  </table>
<% end %>
