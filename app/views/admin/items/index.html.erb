<div class='container'>
  <div class="row">
    <h4 class="px-5 py-2 mt-5 ml-5 bg-light text-dark">商品一覧</h4>
  </div>
  <div class='row'>
    <div class='col'>
        <div class="text-right mb-4">      
          <%= link_to new_admin_item_path do %>
          <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
          <% end %>
  	    </div>
  	</div>  
  	<table class='table table-striped'>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to item.name, admin_item_path(item.id) %>
          </td>
          <td><%= item.price %></td>
          
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == TRUE %>
              <%= "販売中" %>
            <% else %>
              <%= "販売停止中" %>
            <% end %>
          </td>
        </tr>
  	  <% end %>
    </table>
    </div>
  </div>
</div>