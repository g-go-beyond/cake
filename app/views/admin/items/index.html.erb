<div class='container'>
  <div class='row'>
  <%= button_to '+', {controller: 'admin/items', action: 'new'}, {method: :get } %>
  <h2>商品一覧</h2>
	<table class='table'>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <% link_to item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active == TRUE %>
          <%= "販売中" %>
        <% else %>
          <%= "販売停止中" %>
        <% end %>
      </td>
    </tr>
	  <% end %>
  </table>
  </div>
</div>