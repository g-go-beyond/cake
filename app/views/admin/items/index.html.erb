<div class='container'>
  <div class='row'>
    <div class='col'>
      <h2>商品一覧</h2>
      <%= button_to '+', {controller: 'admin/items', action: 'new'}, {method: :get } %>
    	<table class='table table-striped'>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td><%= item.price %></td>
            
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == TRUE %>
                <%= "販売中" %>
              <% else %>
                <%= "販売停止中" %>
              <% end %>
            </td>
          </tr>
    	  <% end %>
      </table>
    </div>
  </div>
</div>