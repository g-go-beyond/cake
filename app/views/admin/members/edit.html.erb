<div "container">
 <div class='row'>
  <div class='col offset-3'>
   <h3 class="col-4 bg-light"><%= @member.last_name %><%= @member.first_name %>さんの会員情報編集</h3>
  </div>
 </div>

<%= form_with model:@member, url: admin_member_path, local:true do |f| %>
<div class='row'>
  <div class='col offset-3'>
   <table class="table table-borderless">
    <tr>
     <th class='col-2'><%= f.label :会員ID %></th>
     <td><%= @member.id %></td>
    </tr>
    <tr>
     <th class='col-2'><%= f.label :氏名 %></th>
      <td>
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </td>
    </tr>
    <tr>
     <th class='col-2'><%= f.label :フリガナ %></th>
      <td> <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
       <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </td>
    </tr>
    <tr>
     <th class='col-2'><%= f.label :郵便番号 %></th>
      <td>
       <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code"%>
      </td>
    </tr>
    <tr>
     <th class='col-span'><%= f.label :住所 %></th>
      <td>
       <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
      </td>
    </tr>
    <tr>
     <th class='col-2'><%= f.label :電話番号 %></th>
     <td>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number"%>
     </td>
    </tr>
    <tr>
     <th class='col-2'><%= f.label :メールアドレス%></th>
      <td>
       <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </td>
    </tr>
    <tr>
     <tr>
     <th class='col-2'>会員ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, false ,checked: "checked" %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, "退会" %>
      </td>
    </tr>
    <tr>
　　<tr>
　　 <th></th>
　　 <td><%= f.submit "変更を保存" ,class:"btn btn-success"%></td>
　　</tr>
    </div>
 <% end %>
  </table>
  </div>
 </div>
</div>