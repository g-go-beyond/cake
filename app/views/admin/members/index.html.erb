<div class='container'>
  <div class='row'>
    <h4 class="col-sm-2 bg-light my-4">会員一覧</h1>
      <table class='table'>
        <thead>
          <tr>
            <th class ="table-secondary mt-2">会員ID</th>
            <th class ="table-secondary mt-3">氏名</th>
            <th class ="table-secondary mt-4">メールアドレス</th>
            <th class ="table-secondary mt-3">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
             <td><%= member.id %></td>
             <td>
               <%= link_to admin_member_path(member) do %>
                <%= member.last_name %><%= member.first_name %>
               <% end %>
             </td>
             <td><%= member.email %></td>
             <td>
               <% if member.is_deleted == true %>
                <p class = "text-secondary">退会</p>
               <% else %>
                <p class = "text-success">有効</p>
               <% end %>
             </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @members %>
 </div>
</div>

