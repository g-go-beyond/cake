<h4>ジャンル一覧・追加</h4>
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <h5>ジャンル名</h5>
    <%= f.text_field :name, :placeholder => "ジャンル名" %>
  <%= f.submit '新規投稿' %>
<% end %>

<table class="table">
    <thead>
        <tr>
            <th>ジャンル</th>
            <th></th>
        </tr>
    </thead>

        <% @genres.each do |f| %>
        <tr>
            <td><%= f.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(f) %></td>
        <% end %>
        </tr>
    </tbody>
</table>