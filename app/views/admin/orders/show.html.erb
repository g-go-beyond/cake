<h2>注文履歴詳細</h2>
 <table>
  <tr>
    <th>購入者</th>
    <td><%= @order.member.last_name %><%= @order.member.first_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
    〒<%= @order.shipping_post_code %>
      <%= @order.shipping_address %>
      <%= @order.shipping_name %>
     </td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
   <tr>
   <th>注文ステータス</th>
   <td><%= form_with model:@order, url: admin_order_path, method: :patch do |f| %>
 	    <%= f.select :status, Order.statuses.keys %>
      <%= f.submit '更新'  ,class: "btn btn-primary" %>
      <% end %></td>
   </tr>
</table>

<table class="table">
  <thead>
	 <tr>
	  <th>商品名</th>
	  <th>単価（税込）</th>
	  <th>数量</th>
	  <th>小計</th>
	  <th>製作ステータス</th>
   </tr>
  </thead>
	<tbody>
	<% @order.ordered_items.each do |ordered_item| %>
            <tr>
              <td><%= ordered_item.item.name %></td>
              <td><%= ordered_item.item.name %></td>
              <td><%= ordered_item.quantity.to_s(:delimited) %></td>
              <td><%= (ordered_item.tax_included_price * ordered_item.quantity).to_s(:delimited) %></td>
              <td>
                <%= form_with model:@ordered_item, url: admin_ordered_item_path, method: :patch  do |f| %>
                  <%= f.select :making_status, OrderedItem.making_statuses.keys %>
                  <%= f.submit "更新", class: "btn btn-success mb-2" %>
                <% end %>
              </td>
            </tr>
          <% end %>
	</tbody>
	
	
	
	
	
</table>

<div class="total">
     <h4>商品合計     <%= @order.total_payment %>円</h4>
     <h4>送料　　　    <%= @order.postage %>円</h4>
     <h4>請求金額合計　<%= (@order.total_payment+@order.postage) %>円</h4>
    </div>
  
