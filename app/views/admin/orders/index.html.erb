<div "container">
 <div class='row'>
  <div class='col offset-2'>
   <h4 class="col-sm-2 bg-light">注文履歴一覧</h2>
  </div>
 </div>
 <div class='row'>
  <div class='col-8 offset-2'>
   <table class="table table-borderless">
    <tr class="table-secondary">
     <th>購入日時</th>
     <th>購入者</th>
     <th>注文個数</th>
     <th>注文ステータス </th>
    </tr>
    <% @order.each do |order|%>
    <tr>
     <td>
      <%= link_to admin_order_path(order.id) do %>
       <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      <% end %>
     </td>
     <td>
      <%= order.member.last_name %>
      <%= order.member.first_name %>
     </td>
     <td>
      <% @sum  = 0 %>
      <% order.ordered_items.all.each do |ordered_item|  %>
       <% @quantity = ordered_item.quantity  %>
       <% @sum += @quantity  %>
      <% end %>
      <%= @sum %>
     </td>
     <td><%= order.status %></td>
    </tr>
    <%end%>
   </table>
  </div>
 </div>
</div>
