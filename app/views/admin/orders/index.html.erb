<h2>注文履歴一覧</h2>
<table>
  <tr>
   <th>購入日時</th>
   <th>購入者</th>
   <th>購入個数</th>
   <th>注文ステータス </th>
  </tr>
  <%= @orders.each do |order|%>
    <tr>
       <td>
         <%= link_to admin_order_path do%>
          <%= order.created_at %>
         <%end%>
       </td>
       <td>
         <%= order.member.last_name%>
         <%= order.member.first_name%>
        </td>
        <td>
         <%= ordered_items.count%>
        </td>
        <td>
          <%= order.status %>
        </td>
    </tr>
  <%end%>
</table>

<%= paginate(@orders) %>