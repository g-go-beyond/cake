<div class="container">
<div class="row">
<div class="col-lg-12 col-md-10 col-sm-8">
<h4>注文履歴一覧</h4>
<table class="table">
  <thead>
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to admin_order_path(order) do %>
      <%= order.created_at.strftime('%Y/%m/%d') %>
      <% end %>
      </td>
      <td><%= order.member.last_name %><%= order.member.first_name %></td>
      <td><= order.ordered_items.quantity ></td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>