<div class="container">    
    <div class="row">
        <div class="<col>">
            <h4 class="px-5 py-2 mt-5 ml-5 bg-light text-dark">管理者ログイン</h4>
            <!--pxは左右のパディング,py=上下パディング,ml=左側マージン-->
        </div>
    </div>
    <div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field d-flex justify-content-center mt-5">
                <div class="col-3">
                    <%= f.label :メールアドレス %>
                </div>
                <div class="col-7">
                    <%= f.email_field :email, :size=>"60",autofocus: true, autocomplete: "email" %>
                </div>
            </div>
            <div class="field d-flex justify-content-center">
                <div class="col-3 mt-3">
                    <%= f.label :パスワード %>
                </div>
                <div class="col-7 mt-3">
                    <%= f.password_field :password, :size=>"60", autocomplete: "current-password" %>
                </div>
            </div>
            <div class="field d-flex justify-content-center">
                <% if devise_mapping.rememberable? %>
                    <div class="field">
                        <% end %>
                    </div>
                    <div class="d-grid gap-2 col-4 mx-auto">
                        <%= f.submit "ログイン", class: 'btn btn-primary btn-block mt-4' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>